struct myTestStruct {
    string first_name
    string last_name
    int age

    @init() {
        self.first_name = "John"
        self.last_name = "Doe"
        self.age = 30
    }

    string :: test(int lmao) {
        string test2 = "430"
        // test2 = 50 + 40
        // self.test2 = 50 + 40
        // test5 = "540"
        self.first_name = test2
    }
}

string :: test(int lmao) {
    int test = 3203 + lmao
    int test2 = test + lmao
}

private int :: main(myTestStruct argc, string[] argv) {
    int test4 = (40.4 + 20.4 + 4.30) // TODO: Add support for casting, -> int
    int test = test(10) + "test"
    int main = 40
    int main3 = main
    int main2 = test + main + 40
    int main5 = test + main + 40

    // TODO: Add support for if/else statements
    // We need to check if there is an equal operator, if the literal values and check if the variable exists
    if (main5 == main2 || main5 == main3) {
        int main4 = main + main2
    } else if (main5 == main3) {
        int main4 = main + main2
    } else if (main5 == main3) {
        int main4 = main + main2
    } else {
        int main4 = main + main5
    }
}
