}

typealias AgePointer = AgeCategory

struct Person {
    var first_name: string
    var last_name: string
    var age: i32
    var age_category: AgeCategory

    @(first_name: string, last_name: string, age: i32, age_category: AgeCategory) {
        self.first_name = first_name
        self.last_name = last_name
        self.age = age
        self.age_category = age_category
    }

    func print_information() {
        print("%s %s, %d, %s\n", self.first_name, self.last_name, self.age, self.age_category)
    }
}

