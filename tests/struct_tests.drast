private extern struct Person {
    var first_name: string
    var last_name: string
    var age: i32
    var city: string
    var country: string

    func printInformation(): string {
        return "First name: " + first_name + "\nLast name: " + last_name + "\nAge: " + age + "\nCity: " + city + "\nCountry: " + country
    }
}

