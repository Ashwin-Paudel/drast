private extern struct Person {
    string first_name
    string last_name
    int age
    string city
    string country

    string :: printInformation() {
        return "First name: " + first_name + "\nLast name: " + last_name + "\nAge: " + age + "\nCity: " + city + "\nCountry: " + country
    }
}

struct Car {
    string brand
    string model
    int year
    string color
    int price

    string :: printInformation() {
        return "Brand: " + brand + "\nModel: " + model + "\nYear: " + year + "\nColor: " + color + "\nPrice: " + price
    }
}

